{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "./src",
    "noEmit": true,
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@arete/backend/ethics-core": ["../../backend/src/ethics-core/index.ts"],
      "@styles/*": ["styles/*"],
      "@theme": ["theme"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src", "src/types"],
  "references": [
    { "path": "../backend" }
  ]
}
