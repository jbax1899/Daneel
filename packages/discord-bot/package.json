{
    "name": "@arete/discord-bot",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "main": "dist/index.js",
    "exports": {
        ".": "./dist/index.js",
        "./src/utils/openaiService.js": "./dist/src/utils/openaiService.js",
        "./src/utils/response/metadata.js": "./dist/src/utils/response/metadata.js",
        "./src/utils/RateLimiter.js": "./dist/src/utils/RateLimiter.js"
    },
    "scripts": {
        "prestart": "pnpm build",
        "start": "node --es-module-specifier-resolution=node dist/index.js",
        "dev": "pnpm exec cross-env NODE_ENV=development pnpm exec tsx watch src/index.ts",
        "build": "pnpm --filter @arete/backend build && pnpm clean && tsc && pnpm copy-files",
        "clean": "rimraf dist",
        "copy-files": "xcopy /s /e /i /y src\\*.* dist\\src\\ 2>nul && xcopy /s /e /i /y src\\commands\\*.* dist\\commands\\ 2>nul && xcopy /s /e /i /y src\\events\\*.* dist\\events\\ 2>nul && xcopy /s /e /i /y src\\utils\\*.* dist\\utils\\ 2>nul || echo No files to copy",
        "watch": "tsc -w"
    },
    "dependencies": {
        "@arete/backend": "workspace:*",
        "@discordjs/voice": "^0.19.0",
        "@openai/agents": "^0.3.7",
        "@sapphire/shapeshift": "^4.0.0",
        "body-parser": "^2.2.1",
        "cloudinary": "^2.8.0",
        "date-fns": "^4.1.0",
        "discord.js": "^14.25.1",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "flyio": "^0.6.14",
        "js-yaml": "^4.1.1",
        "linkify-it": "^5.0.0",
        "mime-types": "^3.0.2",
        "node-fetch": "^3.3.2",
        "only": "^0.0.2",
        "openai": "^6.15.0",
        "opusscript": "^0.0.8",
        "prism-media": "^1.3.5",
        "reindex": "^0.1.0",
        "remark-parse": "^11.0.0",
        "remark-stringify": "^11.0.0",
        "unified": "^11.0.5",
        "unist-util-visit": "^5.0.0",
        "winston": "^3.19.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.6",
        "@types/express": "^5.0.6",
        "@types/linkify-it": "^5.0.0",
        "@types/mdast": "^4.0.4",
        "@types/node": "^24.10.4",
        "@types/unist": "^3.0.3",
        "copyfiles": "^2.4.1",
        "cross-env": "^10.1.0",
        "rimraf": "^6.1.2",
        "ts-node-dev": "^2.0.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
