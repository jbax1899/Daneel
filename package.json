{
    "name": "arete",
    "private": true,
    "packageManager": "pnpm@10.26.2",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start:dev": "concurrently \"pnpm exec ts-node --transpile-only packages/backend/src/server.ts\" \"pnpm --filter @arete/web dev\"",
        "start:backend": "pnpm exec ts-node --transpile-only packages/backend/src/server.ts",
        "start:bot": "pnpm build && pnpm --filter @arete/discord-bot dev",
        "start:prod-test": "pnpm --filter @arete/backend build && cross-env NODE_ENV=production node server.js",
        "dev:prod-test": "concurrently \"pnpm --filter @arete/backend build && cross-env NODE_ENV=production node server.js\" \"pnpm --filter @arete/web dev\"",
        "build": "pnpm -r build",
        "validate-arete-tags": "node scripts/validate-arete-tags.js",
        "blog-sync": "node scripts/blog-sync.js",
        "pre-review": "pnpm validate-arete-tags && pnpm type-check && pnpm lint-check",
        "type-check": "pnpm exec tsc --noEmit",
        "lint-check": "pnpm exec eslint packages/"
    },
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "@swc/core": "^1.13.5",
        "@swc/helpers": "^0.5.17",
        "@types/better-sqlite3": "^7.6.11",
        "@types/js-yaml": "^4.0.9",
        "@types/mime-types": "^3.0.1",
        "@types/node": "^24.5.1",
        "@types/react": "^18.3.27",
        "@types/react-dom": "^18.3.7",
        "@types/winston": "^2.4.4",
        "@types/ws": "^8.5.14",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "concurrently": "^8.0.1",
        "cross-env": "^10.1.0",
        "eslint": "^9.38.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react-hooks": "^5.2.0",
        "prettier": "3.7.4",
        "csstype": "^3.2.3",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.2",
        "vite": "^7.1.10"
    },
    "pnpm": {
        "overrides": {
            "@types/react": "18.3.27",
            "@types/react-dom": "18.3.7",
            "csstype": "3.2.3"
        }
    },
    "dependencies": {
        "@ai-sdk/openai": "^2.0.8",
        "@assistant-ui/react-ai-sdk": "^0.11.1",
        "@discordjs/voice": "^0.19.0",
        "@langchain/core": "^0.3.58",
        "@modelcontextprotocol/sdk": "^1.18.2",
        "@pinecone-database/pinecone": "^6.1.2",
        "@tailwindcss/cli": "^4.1.11",
        "ai": "^5.0.8",
        "better-sqlite3": "^11.10.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "crypto": "^1.0.1",
        "dotenv": "^16.6.1",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^9.0.2",
        "langchain": "^0.3.37",
        "lucide-react": "^0.539.0",
        "opusscript": "^0.0.8",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.11",
        "tw-animate-css": "^1.3.6",
        "websockets": "^0.2.0"
    }
}
